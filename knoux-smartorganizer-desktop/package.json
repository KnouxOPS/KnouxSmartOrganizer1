{
  "name": "knoux-smartorganizer-pro",
  "version": "1.0.0",
  "description": "تطبيق مكتبي لترتيب الصور وتصنيفها باستخدام الذكاء الاصطناعي",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "install-deps": "npm install",
    "dev": "electron . --dev"
  },
  "author": "Knoux SmartOrganizer Team",
  "license": "MIT",
  "dependencies": {
    "@vladmandic/face-api": "^1.7.13",
    "@tensorflow/tfjs-node": "^4.20.0",
    "@xenova/transformers": "^2.17.1",
    "canvas": "^2.11.2",
    "image-hash": "^5.3.1",
    "nsfwjs": "^4.1.0",
    "sharp": "^0.33.4",
    "tesseract.js": "^5.1.0",
    "chokidar": "^3.5.3",
    "glob": "^10.3.0",
    "exif-parser": "^0.1.12",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.knoux.smartorganizer",
    "productName": "Knoux SmartOrganizer PRO",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/@vladmandic/face-api/model/*",
      "node_modules/@vladmandic/face-api/model/ssd_mobilenetv1_model-weights_manifest.json",
      "node_modules/@vladmandic/face-api/model/face_landmark_68_model-weights_manifest.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
